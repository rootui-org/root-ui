{
  "name": "rootui-monorepo",
  "private": true,
  "version": "0.0.1",
  "description": "Root UI Monorepo",
  "license": "MIT",
  "type": "module",
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "build": "turbo run build --filter='./packages/**'",
    "dev": "turbo watch dev --concurrency 15 --filter='./packages/**'",
    "link": "turbo run link --filter='./packages/**'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.8.10",
    "typescript": "^5"
  }
}
